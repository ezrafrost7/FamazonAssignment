@model IEnumerable<string>

<!--creating the buttons for each category dynamically-->
<a class="btn btn-block btn-outline-dark" asp-action="Index" asp-controller="Home" asp-route-category="">View All</a>

@foreach (string category in Model)
            {
                <a class="btn btn-block
                   @(category == ViewBag.SelectedCategory ? "btn-danger" : "btn-outline-dark")"
                   asp-action="Index" asp-controller="Home" asp-route-category="@category" asp-route-page="1"
                   >@category</a>
            } 